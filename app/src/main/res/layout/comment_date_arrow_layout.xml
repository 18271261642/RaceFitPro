<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/commDateLin"
    android:gravity="center">


    <ImageView
        android:id="@+id/commArrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_10"
        android:padding="@dimen/size_10"
        android:src="@drawable/arrow_white_left" />

    <TextView
        android:id="@+id/commArrowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="2020-02-02"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/commArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"
        android:src="@drawable/arrow_white_right" />


</LinearLayout>



