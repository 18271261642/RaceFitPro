<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/b30_sport"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">





    <ImageView
        android:id="@+id/homeB31ManHeartImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fgm_home_function_heart" />



    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/homeBpManLin"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/homeB31ManBpImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/fgm_home_function_bp" />


        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </LinearLayout>



    <ImageView
        android:id="@+id/homeB31ManBloadOxImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fgm_home_function_sp" />


    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:visibility="invisible" />


    <ImageView
        android:visibility="visible"
        android:id="@+id/homeB31ManFatigueImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fgm_home_function_ftg" />


    <View
        android:id="@+id/homeB31ManFatigueView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/homeB31ManRespRateImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fgm_home_function_breath" />


</LinearLayout>