<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <include layout="@layout/comment_b30_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FF307E"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/rateCurrDateLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:src="@drawable/arrow_white_left"/>

            <TextView
                android:id="@+id/rateCurrdateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-22"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/rateCurrDateRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:src="@drawable/arrow_white_right"/>
        </LinearLayout>



        <com.example.bozhilun.android.w30s.views.W30CusHeartView
            android:id="@+id/w30_detail_heart_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            app:w30s_heartLineColor="#F5BED3"
            app:w30s_noDataColor="@color/white"
            app:w30s_pointColor="@color/white" />



    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/w30HeartDetailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>