<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <com.example.bozhilun.android.widget.NoScrollViewPager
        android:id="@+id/b11NoScrollViewPager"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"/>


    <com.roughike.bottombar.BottomBar
        android:id="@+id/b11HomeBottomBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:bb_activeTabColor="@color/new_colorAccent"
        app:bb_tabXmlResource="@xml/x_watch_bottom_tabs"
        android:layout_height="@dimen/size_60"/>

</androidx.constraintlayout.widget.ConstraintLayout>