<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/itemSquareUserImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:background="@mipmap/ic_img_b36_light"/>


    <TextView
        android:id="@+id/itemSquareUserNameTv"
        android:text="孙悟空"
        android:textColor="@color/contents_text"
        app:layout_constraintLeft_toRightOf="@id/itemSquareUserImg"
        app:layout_constraintTop_toTopOf="@id/itemSquareUserImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        app:layout_constraintTop_toBottomOf="@id/itemSquareUserNameTv"
        app:layout_constraintLeft_toRightOf="@id/itemSquareUserImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:text="今天"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/itemSquareContxtTv"
        app:layout_constraintTop_toBottomOf="@id/itemSquareUserImg"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:text="孙悟空大闹天空孙悟空大闹天空孙孙悟空大闹天空孙悟空大闹天空孙孙悟空大闹天空孙悟空大闹天空孙悟空大闹天空孙悟空大闹天空孙悟空大闹天空"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/itemSquareContxtTv"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>