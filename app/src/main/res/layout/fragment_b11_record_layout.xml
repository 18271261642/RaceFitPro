<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/b30_home_title_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch_record_titleLin">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <Button
               android:id="@+id/b11SyncTimeBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="同步时间"/>

           <Button
               android:id="@+id/b11SetLanguageBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="设置手环语言"/>

           <Button
               android:id="@+id/b11SetGoalBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="设置运动目标10000步"/>


           <Button
               android:id="@+id/b11SetHandBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="设置手势唤醒转腕亮屏和抬手亮屏"/>


           <Button
               android:id="@+id/b11Btn1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="设置用户数据"/>

           <Button
               android:id="@+id/b11Btn2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="全天心率检测"/>

           <Button
               android:id="@+id/b11Btn3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="查找手机"/>


           <Button
               android:id="@+id/b11Btn4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="时间模式24小时制"/>


           <Button
               android:id="@+id/b11Btn5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="设置英制"/>

           <TextView
               android:id="@+id/sendByteDataBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="发送的指令:"/>


           <TextView
               android:id="@+id/backByteDataBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="返回的指令"/>

       </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>